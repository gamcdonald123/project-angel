<div class="report-pages px-2">
  <div class="d-flex">
    <%= link_to homepage_path do %>
        <i class="fa-solid fa-circle-arrow-left back-button-arrow"></i>
      <% end %>
    <h3 class="text-center py-4 ml-5">Add a new report</h3>
  </div>

  <div class="container reports-form py-4 shadow-lg">
    <div data-controller='report'>
      <%= simple_form_for(@report) do |f|%>
        <%= f.input :did_it_happen_to_you, :collection => %w[Yes No], prompt: "Yes or No" %>
        <%= f.input :report_type, label:"What would you like to report?", :collection => ["Verbal harassment", "Physical harassment", "Visual harassment", "Stalking", "Cyber harassment", "Discriminatory harassment"], prompt: "Select one",
                    input_html: {data: {action: "change->report#changeDescriptionOptions"}}%>
        <%= f.input :location, :placeholder => 'i.e. Old Street station EC1' %>
        <%= f.input :date_and_time, label:"When did the incident occur?", html5: true %>
        <%= f.input :description, input_html: {data: {
          report_target: "description"
        }, 'rows'=>5}, :placeholder => 'i.e. catcalling...'%>
        <%= f.submit value:"Report", class:"btn btn-dark rounded-4 w-100"%>
      <% end %>
    </div>
  </div>

</div>
