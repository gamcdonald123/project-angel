
<div class="container profile-page">

  <div class="profile-photo">
    <% if @user.photo.attached? %>
      <%= @user.photo %>
    <% else %>
      <%= image_tag "blank-profile.png" %>
    <% end %>
  </div>
  <div class="profile-info my-4">
    <p><strong>First name: </strong><%= @user.first_name %></p>
    <p><strong>Last name: </strong><%= @user.last_name  %></p>
    <p><strong>Email: </strong><%= @user.email %></p>
  </div>

  <%= link_to "Edit", edit_profile_path, class:"btn btn-dark w-25 mt-3" %>

  <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class:"btn btn-light w-25 mx-4 mt-3"%>

</div>
